<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recyclerview_HospitalList">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/recycler_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="47.0dip"
            android:backgroundTint="@android:color/white"
            app:layout_scrollFlags="enterAlways">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btn_back"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/icon_back" />

                <TextView
                    android:textSize="18.0dip"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:id="@+id/con_titles"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="의원"
                    android:maxLines="1"
                    android:layout_weight="1.0"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_gravity="center|right"
                    android:id="@+id/recycler_filter"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20.0dip"
                    app:srcCompat="@drawable/icon_filter" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <HorizontalScrollView
            android:id="@+id/linear"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <Button
                    android:id="@+id/btn_region_in_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="6dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:layout_marginBottom="4dp"
                    android:textSize="14dp"
                    android:background="@drawable/btn_top"
                    android:text="지역 설정"
                    android:stateListAnimator="@null"/>

                <Button
                    android:id="@+id/btn_medical_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="6dp"
                    android:fontFamily="@font/applesdgothicneob"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/btn_top"
                    android:textSize="14dp"
                    android:text=""
                    android:stateListAnimator="@null"/>


                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneob"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/btn_top"
                    android:textSize="14dp"
                    android:text=" 병원명을 검색해보세요 "
                    android:stateListAnimator="@null"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:id="@+id/hide_filter_view"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_gravity="center"
            android:background="#DEDEDE" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/hide_filter_toolbar"
            android:visibility="gone"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:backgroundTint="@android:color/white"
            app:layout_scrollFlags="enterAlways">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/filter_ratio"
                    android:layout_width="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/filter_ratio_iv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_uncheck"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/applesdgothicneob"
                        android:text="전문의 비율순"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>

                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:id="@+id/filter_total"
                    android:layout_width="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/filter_total_iv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_uncheck"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/applesdgothicneob"
                        android:text="전문의 인원순"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>

                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#DEDEDE" />

                <LinearLayout
                    android:id="@+id/filter_distance"
                    android:layout_width="0dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/filter_distance_iv"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/icon_uncheck"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="가까운 거리순"
                        android:fontFamily="@font/applesdgothicneob"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/recycler_toolbar"
        android:gravity="center"
        android:id="@+id/linearfortv"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/applesdgothicneob"
            android:textColor="#253628"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/tv_cnt"
            android:text=""/>

    </LinearLayout>



    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:layout_below="@+id/linearfortv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:gravity="center">

        <com.github.edsergeev.TextFloatingActionButton
            android:id="@+id/fb_totop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#253628"
            android:elevation="0dp"
            android:fontFamily="@font/applesdgothicneob"
            android:foregroundGravity="center"
            android:text="^"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:visibility="gone"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabCustomSize="30dp"
            app:text_y_offset="10dp"
            tools:ignore="smallSp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <com.github.edsergeev.TextFloatingActionButton
            android:id="@+id/fb_tomap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#253628"
            android:fontFamily="@font/applesdgothicneob"
            android:foregroundGravity="bottom"
            android:text="map"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            app:borderWidth="0dp"
            app:fabCustomSize="70dp"
            app:text_y_offset="5dp"
            tools:ignore="smallSp"
            android:elevation="0dp"
            app:elevation="0dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:visibility="gone">


        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/circle_progress"
            android:indeterminateDuration="1000"/>
    </LinearLayout>

</RelativeLayout>