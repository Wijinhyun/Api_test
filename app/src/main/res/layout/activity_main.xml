<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="13dp"
        app:layout_constraintBottom_toTopOf="@id/LL_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_doctor" />

    <com.github.edsergeev.TextFloatingActionButton
        android:id="@+id/fb_qna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="\?"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/hangeulnurib"
        android:backgroundTint="#F87D4B"
        app:text_y_offset="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#ffffff"
        app:borderWidth="0dp"
        />

    <LinearLayout
        android:id="@+id/LL_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_region"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@drawable/border_layout"
            android:text="지역"
            android:fontFamily="@font/hangeulnurib"
            android:stateListAnimator="@null"
            />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="검색할 병원 명을 입력하세요"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:stateListAnimator="@null"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Dermatology"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_dermatology3" />

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Ophthalmology"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_ophthalmology" />

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Cosmetic_Surgery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_cosmetic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Orthopedics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_orthopedics" />

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Otolaryngology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_ent2" />

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Surgical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_surgical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Internal_Medicine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_internal_medicine" />

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Urology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_urology" />

            <com.example.api_test.SquareButton
                android:id="@+id/btn_Obstetrics_Gynecology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:fontFamily="@font/hangeulnurib"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_obstetrics" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>