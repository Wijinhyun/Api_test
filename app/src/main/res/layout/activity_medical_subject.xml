<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Medical_subject"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Dermatology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_dermatology3" />

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Ophthalmology"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_ophthalmology" />

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Cosmetic_Surgery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_cosmetic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Orthopedics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_orthopedics" />

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Otolaryngology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_ent2" />

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Surgical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_surgical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Internal_Medicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_internal_medicine" />

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Urology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_urology" />

        <com.example.api_test.SquareButton
            android:id="@+id/btn_Obstetrics_Gynecology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:fontFamily="@font/hangeulnurib"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_obstetrics" />


    </LinearLayout>

</LinearLayout>